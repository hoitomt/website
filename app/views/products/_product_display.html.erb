<div class="ts-display-pf-img centered-image">
	<% if product && product.photo_file_name %>
		<%= link_to image_tag( product.photo.url(:medium)), 
								product.photo.url(:medium), 
								:class => 'image',
								:rel => "prettyPhoto[mixed]" %>
	<% else %>
		<h3>No Photo Selected</h3>
	<% end %>
</div>
<div class="ts-display-pf-text">
	<h2><%=h product.name %></h2>
	<p><%=h product.description %></p>
	<p><%= number_to_currency(product.price) %></p>
	<% if current_user %>
		<%= link_to 'Edit', edit_product_path(product) %> |
		<%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %>
	<% end %>
</div>
<div class="ts-display-clear"></div>
		