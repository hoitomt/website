<%= image_tag @product.photo.url(:medium) %>

<% form_for @product, :html => { :multipart => true } do |f| %>
	<% if @product.errors.any? %>
	  <div id="error_explanation">
	    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this service_form from being saved:</h2>

	    <ul>
	    <% @product.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>

  <p>
    <strong><%= f.label :name %></strong>
    <%= f.text_field :name %>
  </p><br />
  <p>
    <strong><%= f.label :price %></strong>
    <%= f.text_field :price %>
  </p><br />
  <p>
    <strong><%= f.label :description %></strong>
    <%= f.text_field :description %>
  </p><br />
  <p>
  	<strong>Change Picture</strong>
	<%= f.file_field :photo %>
  </p><br />
  <p>
    <%= f.submit 'Save' %>
  </p><br />
<% end %>